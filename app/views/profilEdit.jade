  // NAVBAR ==================================================
  body
    if session
      include ./navbar_connect.jade
    else
      include ./navbar_unconnect.jade
    // Page de profil
    .container-fluid.marg-nav
      .row
        .col-md-offset-3.col-md-7
          h2(style='text-align: center;') Edition de profil
      .row
        .col-sm-offset-3.col-md-8
          form(action='updateProfil', method='post', style='text-align:center')
            input(type='hidden', name='_csrf', value='csrf')
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='firstName') Nom
                  input.form-control(type='text', name='name', disabled='disabled' value=user.name )
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='lastName') Prénom
                  input.form-control(type='text', name='firstName', disabled='disabled' value=user.firstName)
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='timeA') Pseudo
                  input.form-control(type='text', name='username', value=user.username)
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='phone') Mobile
                  input.form-control(type='tel', name='phoneNumber', value=user.phoneNumber)
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='voiture') Adresse de domicile
                  input.form-control(type='text', name='address', value=user.address)
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='postal') Code postal
                  input.form-control(type='text', name='postalCode', value=user.postalCode)
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='city') Ville
                  input.form-control(type='text', name='city', value=user.city)
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='country') Pays
                  input.form-control(type='text', name='country', value=user.country)
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='mail') Adresse Email
                  input.form-control(type='text', name='email', disabled='disabled', value=user.email)
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='password') Password
                  input.form-control(type='password', name='password')
            .row
              .col-md-offset-2.col-md-6
                .form-group
                  label(for='passwordV') Password verification
                  input.form-control(type='password', name='passwordV')

            br
            br
            br
            .row
              .col-md-12
                .col-md-offset-2.col-md-6
                  input.btn.btn-success.btn-fat(type='submit', value='update')
              br
              br
