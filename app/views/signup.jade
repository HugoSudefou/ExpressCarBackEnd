            h1  Sign up 
        .row
          form.form-horizontal(name='signup', role='form', method='post', accept-charset='utf-8')
            .col-md-offset-2.col-md-3
              .form-group
                label(for='Nom') Pseudo
                input#pseudo.form-control(type='text', name='username', maxlength='15', placeholder='Pseudo')
            .row
              .col-md-offset-2.col-md-3
                .form-group
                  label(for='Nom') Name
                  input#nom.form-control(type='text', name='name', maxlength='20', placeholder='Name')
              .col-md-offset-1.col-md-3
                .form-group
                  label(for='Prenom') First Name
                  input#prenom.form-control(type='text', name='firstname', maxlength='20', placeholder='First Name')
            .row
              .col-md-offset-2.col-md-7
                .form-group
                  label(for='Email') Mail address
                  input#email.form-control(type='text', name='email', maxlength='30', placeholder='Mail')
            .row
              .col-md-offset-2.col-md-7
                .form-group
                  label(for='postal') Zip code
                  input#postal.form-control(type='text', name='postalcode', maxlength='30', placeholder='Zip code')
            .row
              .col-md-offset-2.col-md-7
                .form-group
                  label(for='ville') City
                  input#ville.form-control(type='text', name='city', maxlength='30', placeholder='City')
            .row
              .col-md-offset-2.col-md-7
                .form-group
                  label(for='country') Country
                  input#country.form-control(type='text', name='country', maxlength='30', placeholder='Country')
            .row
              .col-md-offset-2.col-md-3
                .form-group
                  label(for='Password') Password
                  input#password.form-control(type='password', name='password', maxlength='20', placeholder='Password')
              .col-md-of.fset-1.col-md-3
                .form-group
                  label(for='Vpassword') Password verification
                  input#vpassword.form-control(type='password', name='passwordV', maxlength='20', placeholder='Password verification')
            .row
              .col-md-offset-2.col-md-3
                .input-group
                  span.input-group-addon.glyphicon.glyphicon-earphone
                  input.form-control(type='text', maxlength='20', placeholder='Phone',name='phonenumber' aria-describedby='basic-addon1')
                .input-group
                  span.input-group-addon.glyphicon.glyphicon-globe
                  input.form-control(type='text', maxlength='20', placeholder='Address', name='address', aria-describedby='basic-addon1')
