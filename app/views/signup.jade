        .container.marketing
            .row
                div(style='text-align:center')
                    p
                    h1 Sign up
                    p
                form.form-horizontal(action='/signup', name='signup', role='form', method='post', accept-charset='utf-8')
                    input(type='hidden', name='_csrf', value='csrf')
                    .row
                        .col-md-offset-2.col-md-3
                            .form-group
                                label(for='Nom') Pseudo
                                input#try.form-control(type='text', name='username', maxlength='15', placeholder='Pseudo', style='text-align:center', value=form.username)
                    .row
                        .col-md-offset-2.col-md-3
                            .form-group
                                label(for='Nom') Nom
                                input#nom.form-control(type='text', name='name', maxlenght='20', placeholder='Nom', value=form.name)
                        .col-md-offset-1.col-md-3
                            .form-group
                                label(for='Prenom') Prénom
                                input#prenom.form-control(type='text', name='firstName', maxlenght='20', placeholder='Prénom', value=form.firstName)
                    .row
                        .col-md-offset-2.col-md-7
                            .form-group
                                label(for='Email') Email
                                input#email.form-control(type='text', name='email', maxlenght='30', placeholder='Email', value=form.email)
                    .row
                        .col-md-offset-2.col-md-7
                            .form-group
                                label(for='postal') Code Postal
                                input#postal.form-control(type='text', name='postalCode', maxlenght='30', placeholder='Code Postal', value=form.postalCode)
                    .row
                        .col-md-offset-2.col-md-7
                            .form-group
                                label(for='ville') Ville
                                input#ville.form-control(type='text', name='city', maxlenght='30', placeholder='Ville', value=form.city)
                    .row
                        .col-md-offset-2.col-md-7
                            .form-group
                                label(for='country') Pays
                                input#country.form-control(type='text', name='country', maxlenght='30', placeholder='Pays', value=form.country)
                    .row
                        .col-md-offset-2.col-md-3
                            .form-group
                                label(for='Password') Mot de passe
                                input#password.form-control(type='password', name='password', maxlenght='20', placeholder='Mot de passe')
                        .col-md-of.fset-1.col-md-3
                            .form-group
                                label(for='Vpassword') Vérification
                                input#vpassword.form-control(type='password', name='passwordV', maxlength='20', placeholder='Vérification')
                    .row
                        .col-md-offset-2.col-md-3
                            .input-group
                                span.input-group-addon.glyphicon.glyphicon-earphone
                                input.form-control(type='text', maxlenght='20', placeholder='Téléphone', name='phoneNumber',aria-describedby='basic-addon1', value =form.phoneNumber)
                            .input-group
                                span.input-group-addon.glyphicon.glyphicon-globe
                                input.form-control(type='text', maxlenght='20', placeholder='Adresse',name='address', aria-describedby='basic-addon1', value=form.address)
                    br
                    .row
                        .col-md-offset-5.col-md-1
                            input.btn.btn-success.btn-fat(type='submit', value='signIn')
