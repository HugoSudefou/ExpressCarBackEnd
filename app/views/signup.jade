    NAVBAR
    ==================================================
  body
    .navbar-wrapper
      .container
        nav.navbar.navbar-inverse.navbar-static-top
          .container
            .navbar-header
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='index.html') Carea
            #navbar.navbar-collapse.collapse
              ul.nav.navbar-nav
                li
                  a(href='index.html') Home
                li
                  a(href='#about') About
                li
                  a(href='#contact') Contact
              ul.nav.navbar-nav.navbar-right
                li.active
                  a(href='index_signup.html')
                    span.glyphicon.glyphicon-user
                    |  Sign up
                li
                  a(href='index_signin.html')
                    span.glyphicon.glyphicon-log-in
                    |  Sign in
    .container.marketing
      .row
        .col-md-offset-2.col-md-8
          .main
            h1  Sign up
      form.form-horizontal(action='signup', name='signup', role='form', method='post', accept-charset='utf-8') 
        .row
            .col-md-offset-2.col-md-3
              .form-group
                label(for='Nom') Pseudo
                input#pseudo.form-control(type='text', maxlength='15', name='username', placeholder='Pseudo')
        .row
          .col-md-offset-2.col-md-3
            .form-group
              label(for='Nom') Name
              input#nom.form-control(type='text', maxlenght='20', name='name', placeholder='Name')
          .col-md-offset-1.col-md-3
            .form-group
              label(for='Prenom') First Name
              input#prenom.form-control(type='text', maxlenght='20', name='firstname', placeholder='First Name')
        .row
          .col-md-offset-2.col-md-7
            .form-group
              label(for='Email') Mail address
              input#email.form-control(type='text', maxlenght='30', name='email', placeholder='Mail')
        .row
          .col-md-offset-2.col-md-3
            .form-group
              label(for='Password') Password
              input#password.form-control(type='password', maxlenght='20', name='password', placeholder='Password')
          .col-md-of.fset-1.col-md-3
            .form-group
              label(for='Vpassword') Password verification
              input#vpassword.form-control(type='password', maxlength='20', name='passwordV', placeholder='Password verification')
        .row
          .col-md-offset-2.col-md-3
            .input-group
              span.input-group-addon.glyphicon.glyphicon-earphone
              input.form-control(type='text', maxlenght='20', placeholder='Phone', name='phonenumber', aria-describedby='basic-addon1')
            .input-group
              span.input-group-addon.glyphicon.glyphicon-globe
              input.form-control(type='text', maxlenght='20', placeholder='Address', name='address', aria-describedby='basic-addon1')
        br
        .row
          .col-md-offset-5.col-md-1
            input.btn.btn-success.btn.btn-success(type='submit', name='submit', value='Submit')
      if error
        - for(message in error)
          h2= error[message]
      footer
        p.pull-right
          a(href='#') Back to top
        p
          | © 2015 Company, Inc. · 
          a(href='#') Privacy
          |  · 
          a(href='#') Terms
