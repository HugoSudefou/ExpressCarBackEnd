    #profil.container-fluid
      .row
        .col-xs-12
          .main
            .row
              .col-md-offset-2.col-md-7
                // tableau des données user
                h1  Profil 
                br
                br
                table(style='text-align:center')
                  tr
                    th  First Name: 
                    td= user.firstName
                  tr
                    th  Name: 
                    td= user.name
                  tr
                    th  Pseudo: 
                    td(contenteditable='true')= user.username
                  tr
                    th  Adress: 
                    td(contenteditable='true')= user.address
                  tr
                    th  postalCode:
                    td(contenteditable='true')= user.postalCode
                  tr
                    th  city:
                    td(contenteditable='true')= user.city
                  tr
                    th  country:
                    td(contenteditable='true')= user.country
                  tr
                    th  Mail Adress: 
                    td(contenteditable='true')= user.email
                  tr
                    th  Phone: 
                    td(contenteditable='true')= user.phoneNumber
