  //
    NAVBAR
    ==================================================
  body
    if session
      include ./navbar_connect.jade
    else
      include ./navbar_unconnect.jade
    .container-fluid.marg-nav
      .row
        .col-sm-11
          .Recherche(class="d'annonce")
            h2(style='text-align:center') Créer une annonce
    .container.marketing
      .row
        form.form-horizontal(action='add', name='add', role='form', method='post', accept-charset='utf-8')
          .row
            .col-sm-12.col-md-offset-4.col-md-3
              .form-group
                label(for='Nom') Objet
                select#voiture.form-control(name='object')
                  option(value='search') Je recherche une voiture
                  option(value='offer') Je propose une voiture
          .row
            .col-sm-12.col-md-offset-4.col-md-3
              .form-group
                label(for='end') Ville d'arrivée
                input#end.form-control(type='text', name='end', maxlenght='100', placeholder="Ville d'arrivée")
          .row
            .col-sm-12.col-md-offset-4.col-md-3
              .form-group
                label(for='date') Date
                input#date-heure.form-control(type='date', name='date', maxlenght='8', placeholder='Date')
          .row
            .col-sm-12.col-md-offset-4.col-md-3
              .form-group
                label(for='date') Heure
                input#date-heure.form-control(type='time', name='beginHour', maxlenght='8', placeholder='Date')
          .row
            .col-sm-11.col-md-offset-5.col-md-3
              input.btn.btn-secondary.btn-fat(type='submit' value='Create')
    .footer-p
      footer#footer.site-footer
        section.site-footer-bottom
          ul.display
            li
              ul
                li.dispi
                  | ©2016 CARea
                  a
                li.dispi
                  a(href='/construct') Legal Notice
                  a
                li.dispi
                  a(href='/faq') FAQ